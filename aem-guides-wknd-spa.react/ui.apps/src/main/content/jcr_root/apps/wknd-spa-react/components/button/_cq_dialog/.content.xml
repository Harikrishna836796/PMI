<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Button"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_button_v2"
    trackingFeature="core-components:button:v2">
    <content
        granite:class="cmp-button__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <buttonvar
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Button Variants"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <variation
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Style Variations for Button"
                                                fieldLabel="Style Variation"
                                                name="./styleVariation"
                                                type="editable">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <select
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Select One"
                                                        value="select one"/>
                                                    <primary
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Primary slate / &#xa;turquoise"
                                                        value="btn-slate-turquoise"/>
                                                    <primary1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Primary slate /&#xa;white&#xa;"
                                                        value="btn-slate-white"/>
                                                    <primary2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Primary white /&#xa;turquoise&#xa;"
                                                        value="btn-white-turquoise"/>
                                                    <secondary
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Secondary slate&#xa;/ turquoise"
                                                        value="btn-outline-slate-turquoise"/>
                                                    <secondary1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Secondary slate&#xa;/ slate"
                                                        value="btn-outline-slate-slate"/>
                                                    <secondary2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Secondary white&#xa;/ turquoise"
                                                        value="btn-outline-white-turquoise"/>
                                                    <tertiary
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Tertiary slate /&#xa;turquoise"
                                                        value="btn-forward-slate-turquois"/>
                                                    <tertiary1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Tertiary slate /&#xa;white"
                                                        value="btn-forward-slate-white"/>
                                                    <tertiary2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Tertiary white /&#xa;turquoise&#xa;"
                                                        value="btn-forward-white-turquoise link-soft-white"/>
                                                </items>
                                            </variation>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </buttonvar>
                    <linkvar
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Link Variants"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <variation
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Link Variations"
                                                fieldLabel="Link Variation"
                                                name="./linkVariation"
                                                type="editable">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <select
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Select One"
                                                        value="select one"/>
                                                    <linkturquoise
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link turquoise"
                                                        value="link-turquoise"/>
                                                    <linkslate
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link slate"
                                                        value="link-slate"/>
                                                    <linksoftwhite
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link soft white"
                                                        value="link-soft-white"/>
                                                    <linkslateturquoise
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link slate / turquoise"
                                                        value="link-slate-turquoise"/>
                                                    <linkwhiteturquoise
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link white / turquoise"
                                                        value="link-white-turquoise"/>
                                                    <linkslatewhite
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link slate / white"
                                                        value="link-slate-white"/>
                                                </items>
                                            </variation>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </linkvar>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
